<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="materialButtonStyle">@style/AppTheme.Widget.MaterialComponents.Button.Bold
        </item>
        <item name="toolbarStyle">@style/AppTheme.Toolbar</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="AppTheme.Widget.MaterialComponents.TextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.Widget.MaterialComponents.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAppearance">
            @style/AppTheme.Widget.MaterialComponents.TextAppearance
        </item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="AppTheme.Widget.TextView.Bold" parent="AppTheme">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="AppTheme.Widget.TextView.Regular" parent="AppTheme">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="AppTheme.Widget.MaterialComponents.Button.Regular" parent="AppTheme.Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="AppTheme.Widget.MaterialComponents.Button.Bold" parent="AppTheme.Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

</resources>
